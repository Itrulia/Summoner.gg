.widget
    .widget__header
        span {{ ctrl.page.name }}
    .widget__body
        error(text="'Rune page is empty'" ng-if="ctrl.page.slots.length == 0")
        .widget__item(ng-repeat="rune in ctrl.page.slots")
            .rune
                .rune__figure
                    span.rune__rank {{ ::rune.rank }}x
                    img.rune__image(ng-src="{{ ::rune.runeAvatar }}")
                .rune__text
                    span.rune__name {{ ::rune.runeName }}
                    span.rune__description {{ ::rune.runeDescription }}
