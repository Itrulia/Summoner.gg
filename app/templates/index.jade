.header.landing__hero
    .header__background

    sidemenu.header__sidemenu

    .header__search.landing__hero__search(ng-controller="SearchController as ctrl")
        .header__logo-container
            svg.header__logo(viewBox="0 0 565.48 256.57")
                use(xlink:href="/images/sprites/logos/logos.svg#medium")

        .header__input-wrapper
            form(name="form" ng-submit="form.$valid && ctrl.search()" autocomplete="off" novalidate)
                input.header__input(ng-model="ctrl.summoner" placeholder="Summoner" name="summoner" required)
                button.header__input-addon(tabIndex="-1")
                    svg.icon--material
                        use(xlink:href="/images/sprites/material/action.svg#ic_search_24px")

        .header__spinner(ng-if="ctrl.loading")
            spinner
    a.landing__button.button.button--jumbo.button--secondary(ui-sref="authentication.register" paper-ripple)
        | Register Now

