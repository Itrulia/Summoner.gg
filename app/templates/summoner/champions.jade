spinner(ng-if="ctrl.loading")
.grid(ng-if="!ctrl.loading")
    .grid__col--0.d-grid__col--2(ng-if="!ctrl.loading && !ctrl.error && ctrl.champions.length == 0")
    .grid__col--12.d-grid__col--8(ng-if="!ctrl.loading && !ctrl.error && ctrl.champions.length == 0")
        error(text="'No games have been found'")
    .grid__col--0.d-grid__col--2(ng-if="!ctrl.loading && !ctrl.error && ctrl.champions.length == 0")

    .grid__col--6.m-grid__col--4.t-grid__col--3.d-grid__col--2.baseline--small(
        ng-repeat="champion in ctrl.champions track by champion.championId"
    )
        a(ui-sref="summoner.matches.as({championId: champion.championName})")
            summoner-champion(champion="champion")