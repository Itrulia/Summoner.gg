nav.sidemenu(ng-class="{'sidemenu--is-open': ctrl.sideMenuOpen}")
    .sidemenu__header
    a.sidemenu__item(ui-sref="index" ui-sref-active="sidemenu__item--is-active")
        .flag
            .flag__figure.sidemenu__item__icon
                svg.icon--material
                    use(xlink:href="/images/sprites/material/action.svg#ic_home_24px")
            .flag__body
                span Home
    a.sidemenu__item(ui-sref="authentication.login" ui-sref-active="sidemenu__item--is-active")
        .flag
            .flag__figure.sidemenu__item__icon
                svg.icon--material
                    use(xlink:href="/images/sprites/material/action.svg#ic_lock_24px")
            .flag__body
                span Login


.sidemenu__overlay(ng-class="{'sidemenu__overlay--is-open': ctrl.sideMenuOpen}" ng-click="ctrl.sideMenuOpen = false")