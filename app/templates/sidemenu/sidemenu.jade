.toolbar
    button.toolbar__button.toolbar__hamburger(ng-click="ctrl.sideMenuOpen = true")
        svg.icon--material
            use(xlink:href="/images/sprites/material/navigation.svg#ic_menu_24px")
        span.toolbar__button__label Menu

    button.toolbar__button.toolbar__kebab(ng-click="ctrl.regionMenuOpen = true")
        svg.icon--material
            use(xlink:href="/images/sprites/material/navigation.svg#ic_more_vert_24px")
