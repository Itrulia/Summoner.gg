.toolbar
    button.toolbar__button.toolbar__hamburger
        span.icon--material(ng-click="ctrl.sideMenuOpen = true") menu

    button.toolbar__button.toolbar__kebab(ng-click="ctrl.regionMenuOpen = true")
        span.icon--material more_vert
        .paper-dropdown
            a.paper-dropdown__item EUW
            a.paper-dropdown__item EUNE
            a.paper-dropdown__item Korea

nav.sidemenu(ng-class="{'sidemenu--is-open': ctrl.sideMenuOpen}")
    .sidemenu__header
    a.sidemenu__item(ui-sref="index" ui-sref-active="sidemenu__item--is-active")
        .flag
            .flag__figure.sidemenu__item__icon
                span.icon--material home
            .flag__body
                span Home
    a.sidemenu__item(ui-sref="authentication.login" ui-sref-active="sidemenu__item--is-active")
        .flag
            .flag__figure.sidemenu__item__icon
                span.icon--material lock
            .flag__body
                span Login


.sidemenu__overlay(ng-class="{'sidemenu__overlay--is-open': ctrl.sideMenuOpen}" ng-click="ctrl.sideMenuOpen = false")